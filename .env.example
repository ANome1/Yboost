# Configuration de la base de données PostgreSQL

# En développement local
DB_NAME=ybooster
# Définissez votre mot de passe PostgreSQL local :
DB_PASSWORD=votre_mot_de_passe

# En production Scalingo/Heroku (automatiquement fourni par l'addon)
# DATABASE_URL=postgresql://user:password@host:port/database

# Secret pour les sessions (GÉNÉREZ UNE VALEUR ALÉATOIRE EN PRODUCTION !)
SESSION_SECRET=your-secret-key-here

# Environnement
NODE_ENV=development

# Niveau de logging (error, warn, info, debug)
# En production, utilisez 'info' ou 'warn'
LOG_LEVEL=debug

# Port du serveur (optionnel, par défaut 3000)
# PORT=3000
